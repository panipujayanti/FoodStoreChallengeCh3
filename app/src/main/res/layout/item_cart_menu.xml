<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp">


        <ImageView
            android:id="@+id/iv_menu_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_menu_image"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_bold"
            tools:text="Spicy Burger" />

        <TextView
            android:id="@+id/tv_price_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toEndOf="@+id/iv_menu_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_name"
            tools:text="Rp. 25.000" />
        <ImageView
            android:id="@+id/iv_delete_menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_delete"/>

        <LinearLayout
                android:id="@+id/ll_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_price_menu"
                app:layout_constraintStart_toEndOf="@+id/iv_menu_image"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="40dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_minus"/>
                <TextView
                    android:id="@+id/tv_product_calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="8dp"/>
                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_plus"/>
            </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_notes_item"
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_rounded_border_transparent"
            android:hint="@string/text_hint_notes"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="3"
            android:padding="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_menu_image"
            app:layout_constraintTop_toBottomOf="@id/ll_count"
            tools:text="Pedes ya" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>